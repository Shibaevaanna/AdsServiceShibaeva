<Page x:Class="AdsServiceShibaeva.Pages.UserCompletedAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Завершенные объявления">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Мои завершенные объявления" Style="{StaticResource header}" Margin="10"/>
            <Button x:Name="BackButton" Content="Назад" Style="{StaticResource button}" 
                    Width="80" Height="30" Click="BackButton_Click" Margin="10"/>
        </StackPanel>

        
        <ListView x:Name="CompletedAdsListView" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Заголовок" DisplayMemberBinding="{Binding ad_title}" Width="200"/>
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding ad_description}" Width="250"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding price, StringFormat={}{0:C}}" Width="100"/>
                    <GridViewColumn Header="Город" DisplayMemberBinding="{Binding cities.city_name}" Width="120"/>
                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding categories.category_name}" Width="120"/>
                    <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding ad_types.type_name}" Width="100"/>
                    <GridViewColumn Header="Дата публикации" DisplayMemberBinding="{Binding post_date, StringFormat=dd.MM.yyyy}" Width="120"/>
                    <GridViewColumn Header="Дата завершения" DisplayMemberBinding="{Binding updated_date, StringFormat=dd.MM.yyyy}" Width="120"/>
                </GridView>
            </ListView.View>

            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Просмотреть детали" Click="ViewDetailsMenuItem_Click"/>
                    <MenuItem Header="Вернуть в активные" Click="ReactivateMenuItem_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" x:Name="NoCompletedAdsPanel">
            <TextBlock Text="У вас нет завершенных объявлений" Style="{StaticResource header}" Margin="10"/>
            <TextBlock Text="Здесь будут отображаться объявления со статусом 'Завершено'" Style="{StaticResource ad_text}" Margin="10"/>
            <Button x:Name="GoToActiveButton" Content="Перейти к активным объявлениям" Style="{StaticResource button}" 
                    Width="200" Height="30" Click="GoToActiveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>