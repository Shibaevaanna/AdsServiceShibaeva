<Page x:Class="AdsServiceShibaeva.Pages.AddEditAdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="Добавление/Редактирование объявления">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding PageTitle}" Style="{StaticResource header}" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Заголовок -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Заголовок*" Style="{StaticResource text}" Width="150"/>
                    <TextBox x:Name="TitleTextBox" Style="{StaticResource textbox}" Width="300" Text="{Binding CurrentAd.ad_title}"/>
                </StackPanel>

                <!-- Описание -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Описание" Style="{StaticResource text}" Width="150"/>
                    <TextBox x:Name="DescriptionTextBox" Style="{StaticResource textbox}" Width="300" Height="60" 
                             TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding CurrentAd.ad_description}"/>
                </StackPanel>

                <!-- Цена -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Цена*" Style="{StaticResource text}" Width="150"/>
                    <TextBox x:Name="PriceTextBox" Style="{StaticResource textbox}" Width="300" Text="{Binding CurrentAd.price}"/>
                </StackPanel>

                <!-- Город -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Город*" Style="{StaticResource text}" Width="150"/>
                    <ComboBox x:Name="CityComboBox" Style="{StaticResource combobox}" Width="300"
                              DisplayMemberPath="city_name" SelectedValuePath="city_id"
                              SelectedValue="{Binding CurrentAd.city_id}"/>
                </StackPanel>

                <!-- Категория -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Категория*" Style="{StaticResource text}" Width="150"/>
                    <ComboBox x:Name="CategoryComboBox" Style="{StaticResource combobox}" Width="300"
                              DisplayMemberPath="category_name" SelectedValuePath="category_id"
                              SelectedValue="{Binding CurrentAd.category_id}"/>
                </StackPanel>

                <!-- Тип объявления -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Тип*" Style="{StaticResource text}" Width="150"/>
                    <ComboBox x:Name="TypeComboBox" Style="{StaticResource combobox}" Width="300"
                              DisplayMemberPath="type_name" SelectedValuePath="type_id"
                              SelectedValue="{Binding CurrentAd.type_id}"/>
                </StackPanel>

                <!-- Статус -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Статус*" Style="{StaticResource text}" Width="150"/>
                    <ComboBox x:Name="StatusComboBox" Style="{StaticResource combobox}" Width="300"
                              DisplayMemberPath="status_name" SelectedValuePath="status_id"
                              SelectedValue="{Binding CurrentAd.status_id}"/>
                </StackPanel>

                <!-- Дата публикации -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Дата публикации" Style="{StaticResource text}" Width="150"/>
                    <DatePicker x:Name="PostDatePicker" Width="300" SelectedDate="{Binding CurrentAd.post_date}"/>
                </StackPanel>

                <TextBlock Text="* - обязательные поля" Style="{StaticResource ad_text}" Margin="0,10" Foreground="Gray"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="SaveButton" Content="Сохранить" Style="{StaticResource button}" 
                    Width="120" Height="30" Click="SaveButton_Click" Margin="10"/>
            <Button x:Name="CancelButton" Content="Отмена" Style="{StaticResource button}" 
                    Width="120" Height="30" Click="CancelButton_Click" Margin="10"/>
            <Button x:Name="DeleteButton" Content="Удалить" Background="#F44336" 
                    Width="120" Height="30" Click="DeleteButton_Click" Margin="10"
                    Visibility="{Binding DeleteButtonVisibility}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource button}">
                        <Setter Property="Background" Value="#F44336"/>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Page>