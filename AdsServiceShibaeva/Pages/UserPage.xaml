<Page x:Class="AdsServiceShibaeva.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Личный кабинет">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Личный кабинет" Style="{StaticResource header}" Margin="10" HorizontalAlignment="Center"/>

            <Button x:Name="MyAdsButton" Content="Мои активные объявления" Style="{StaticResource button}" 
                    Height="40" Margin="10" Click="MyAdsButton_Click"/>

            <Button x:Name="CompletedAdsButton" Content="Завершенные объявления" Style="{StaticResource button}" 
                    Height="40" Margin="10" Click="CompletedAdsButton_Click"/>

            <Button x:Name="AddAdButton" Content="Добавить объявление" Style="{StaticResource button}" 
                    Height="40" Margin="10" Click="AddAdButton_Click"/>

            <Button x:Name="BackButton" Content="Назад к объявлениям" Style="{StaticResource button}" 
                    Height="40" Margin="10" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>